---
import "../styles/main.css";
import { ViewTransitions } from "astro:transitions";
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Kyle Kettler - Frontend Software Engineer",
  image = "/images/og-main.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-zinc-950 text-zinc-100 selection:bg-zinc-300 selection:text-zinc-900 antialiased"
  >
    <div
      class="min-h-screen pb-4 bg-gradient-to-tl from-zinc-950 via-zinc-700/10 to-zinc-950/80"
    >
      <Navbar />
      <slot />
    </div>
  </body>
</html>
